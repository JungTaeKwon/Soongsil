CC = gcc
CFLAGS = -Wall -Wextra -std=c99

# server
SERVER_TARGET = 20192944_server
SERVER_SRCS = 20192944_server.c
SERVER_OBJS = $(SERVER_SRCS:.c=.o)
SERVER_HEADERS = 20192944_server.h

# client
CLIENT_TARGET = 20192944_client
CLIENT_SRCS = 20192944_client.c
CLIENT_OBJS = $(CLIENT_SRCS:.c=.o)
CLIENT_HEADERS = 20192944_client.h

all: server client

server: $(SERVER_TARGET)

client: $(CLIENT_TARGET)

$(SERVER_TARGET): $(SERVER_OBJS)
	$(CC) $(CFLAGS) -o $(SERVER_TARGET) $(SERVER_OBJS)

$(CLIENT_TARGET): $(CLIENT_OBJS)
	$(CC) $(CFLAGS) -o $(CLIENT_TARGET) $(CLIENT_OBJS)

$(SERVER_OBJS): $(SERVER_SRCS) $(SERVER_HEADERS)
	$(CC) $(CFLAGS) -c $(SERVER_SRCS)

$(CLIENT_OBJS): $(CLIENT_SRCS) $(CLIENT_HEADERS)
	$(CC) $(CFLAGS) -c $(CLIENT_SRCS)

run_server: $(SERVER_TARGET)

	./$(SERVER_TARGET) $(PORT)

run_client: $(CLIENT_TARGET)
	./$(CLIENT_TARGET) $(IP_ADDR) $(PORT)


clean:
	rm -f $(SERVER_OBJS) $(CLIENT_OBJS) $(SERVER_TARGET) $(CLIENT_TARGET)
